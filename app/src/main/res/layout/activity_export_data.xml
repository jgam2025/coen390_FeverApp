<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/etFirstName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:hint="First Name"
            android:background="#F8D9DC"
            android:textColor="#980314"
            android:textColorHint="#980314"
            android:padding="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etLastName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:hint="Last Name"
            android:background="#F8D9DC"
            android:textColor="#980314"
            android:textColorHint="#980314"
            android:padding="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etBirthDate"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:hint="Date of Birth (YYYY-MM-DD)"
            android:background="#F8D9DC"
            android:textColor="#980314"
            android:textColorHint="#980314"
            android:padding="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etHealthCardNumber"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:hint="Health Insurance Number"
            android:background="#F8D9DC"
            android:textColor="#980314"
            android:textColorHint="#980314"
            android:padding="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"
            android:hint="Address"
            android:background="#F8D9DC"
            android:textColor="#980314"
            android:textColorHint="#980314"
            android:padding="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etDoctorName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="24dp"
            android:hint="Family Doctor Name"
            android:background="#F8D9DC"
            android:textColor="#980314"
            android:textColorHint="#980314"
            android:padding="16dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnSaveUserInfo"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Save Info"
            android:textColor="#980314"
            android:backgroundTint="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="16dp"
            android:background="#DDDDDD" />

        <Button
            android:id="@+id/btnExportAll"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Export Data"
            android:textColor="#FFFFFF"
            android:backgroundTint="#980314"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context=".PhoneNumberActivity">

    <TextView
        android:id="@+id/selectTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Useful Phone Numbers"
        android:textSize="26sp"
        android:textColor="#980314"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Emergency -->
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="*Click on a number to dial it"
        android:textColor="#0B0B0B"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectTextView4" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency:"
        android:textSize="18sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/textView9"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/emergencyNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="911"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#980314"
        app:layout_constraintStart_toEndOf="@id/textView8"
        app:layout_constraintTop_toTopOf="@id/textView8"
        android:layout_marginStart="8dp" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Info-SantÃ©:"
        android:textColor="#090909"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView8" />

    <TextView
        android:id="@+id/infoSanteNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="811"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#980314"
        app:layout_constraintTop_toTopOf="@id/textView6"
        app:layout_constraintStart_toEndOf="@id/textView6"
        android:layout_marginStart="8dp" />


    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="QMAS:"
        android:textColor="#0F0E0E"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView6" />

    <TextView
        android:id="@+id/QMASNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1-877-644-4545"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#980314"
        app:layout_constraintTop_toTopOf="@id/textView12"
        app:layout_constraintStart_toEndOf="@id/textView12"
        android:layout_marginStart="8dp" />


    <TextView
        android:id="@+id/selectTextView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Useful Resources"
        android:textColor="#980314"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView12" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="*Click on a link to be redirected to the website"
        android:textColor="#121111"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectTextView5" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="WebMD tips:"
        android:textColor="#0D0B0B"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3" />

    <TextView
        android:id="@+id/webMdLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="webmd.com"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#980314"
        app:layout_constraintTop_toTopOf="@id/textView10"
        app:layout_constraintStart_toEndOf="@id/textView10"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Cleveland Clinic tips:"
        android:textColor="#1A1616"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView10" />

    <TextView
        android:id="@+id/clevelandClinicLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clevelandclinic.org"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#980314"
        app:layout_constraintTop_toTopOf="@id/textView4"
        app:layout_constraintStart_toEndOf="@id/textView4"
        android:layout_marginStart="8dp" />


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#980314"
        android:minHeight="?attr/actionBarSize"
        android:title="Phone Numbers"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:titleTextColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
</androidx.constraintlayout.widget.ConstraintLayout>
